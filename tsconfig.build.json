{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"plugins": [{ "name": "next" }]
	},
	"include": ["src", ".next/types/**/*.ts"],
	"exclude": [
		"node_modules",
		"out",
		"dist",
		"build",
		"bower_components",
		"jspm_packages",
		"**/*.stories.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.figma.ts",
		"**/*.figma.tsx"
	]
}
